{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/next/src/generators/application/schema.json",
  "namedInputs": {
    "src-files": ["{projectRoot}/**/*.ts"],
    "install-deps-inputs": ["{projectRoot}/package.json"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build", "install-deps"],
      "cache": true,
      "inputs": ["src-files", "^src-files"]
    },
    "lint": {
      "cache": true,
      "inputs": ["src-files"]
    }, 
    "install-deps": {
      "cache": true,
      "inputs": ["install-deps-inputs", "^install-deps-inputs"]
    }
  },
  "affected": {
    "defaultBase": "master"
  }
}
